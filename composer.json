{
    "name": "rhn/routermiddleware",
    "description": "PSR-15 middleware to use Annotation Router",
    "type": "project",
    "license": "MIT",

    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "rhn/annotationrouter": "dev-master",
        "psr/http-server-middleware": "^1.0",
        "psr/http-factory": "^1.0"
    },

    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^7.4",
        "zendframework/zend-diactoros": "^1.3",
        "middlewares/utils": "^2.1"
    },

    "autoload": {
        "psr-4": {
            "Middleware\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Middleware\\Tests\\": "tests/"
        }
    },

    "repositories": [
        {
            "type": "github",
            "url": "git@github.com:raphaelhanneken/annotationrouter.git"
        }
    ]
}
